{{>layouts/header}}
<!--  글 상세 페이지  -->

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a href="/articles" class="btn btn-primary">목록</a>
<a href="/articles/{{article.id}}/edit" class="btn btn-success">수정</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제</a>

